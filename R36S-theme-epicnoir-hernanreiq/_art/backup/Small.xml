<theme>
<formatVersion>7</formatVersion>

<view name="basic, detailed, video">

    <image name="background" extra="true">
        <tile>false</tile>
        <path>./_art/ingame-global-bg-small.jpg</path>
        <size>1 1</size>
        <pos>0 0</pos>
    </image>

    <textlist name="gamelist">
        <selectorColor>00000000</selectorColor>
        <selectedColor>ffffff</selectedColor>
        <selectorHeight>0.04</selectorHeight>
        <primaryColor>585858</primaryColor>
        <secondaryColor>888888</secondaryColor>
        <fontPath>./_art/Acre.otf</fontPath>
        <alignment>left</alignment>
        <pos>0.0 0.0833</pos>
	    <size>0.448 0.8513</size>
        <fontSize>0.026</fontSize>
        <lineSpacing>1.7</lineSpacing>
    </textlist>
	
    <text name="top_label" extra="true">
        <pos>0.0 0</pos>
    </text>
	
</view>

	
</theme>
